<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Log in</h1>
    <p class="lead">Get me some dirt</p>
  </div>
</div>

 <div class="form-group">
    <%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'Login (email) : ' %>
    <%= text_field_tag 'email', :email, class: "form-control" %>
  <br /> <br />
    <%= label_tag 'Password : ' %>
    <%= text_field_tag 'password', :password, class: "form-control" %>
  <br /> <br />
  <%= submit_tag "Log In", class: "btn btn-secondary " %>
<% end %>
</div>