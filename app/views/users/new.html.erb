<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Get access to the scandalous life of Manhattan's elite </h1>
    <p class="lead">Now if you'll excuse me, I'm going to go get drunk enough to you all seem interesting</p>
  </div>
</div>

<div class="form-group">
<%= form_tag url_for(action: 'create'), method: "post" do %>

  <%= label_tag '* Email : ' %>
  <%= text_field_tag 'email', nil, class: "form-control" %>
  <br /> <br />

  <%= label_tag ' * Password : ' %>
  <%= text_field_tag 'password', nil, class: "form-control" %>
  <br /> <br />

  <%= label_tag '* First Name : ' %>
  <%= text_field_tag 'first_name', nil, class: "form-control" %>
  <br /> <br />

  <%= label_tag '* Last Name : ' %>
  <%= text_field_tag 'last_name', nil, class: "form-control" %>
  <br /> <br />

  <%= submit_tag "Submit", class: "btn btn-secondary " %>

<% end %>
</div>